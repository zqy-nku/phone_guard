<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.app.HomeActivity">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/safeGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:textColor="#fff"
            android:textSize="25dp"
            android:text="Safety Guardian"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:textSize="20sp"
        android:id="@+id/home_txl_bt"
        android:background="@drawable/color_gray_buttom"
        android:text="Export Contacts"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="left|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:textSize="20sp"
        android:id="@+id/home_hmd_bt"
        android:background="@drawable/color_gray_buttom"
        android:text="Blacklist"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:id="@+id/home_blj_bt"
        android:drawablePadding="10dp"
        android:background="@drawable/color_gray_buttom"
        android:text="Intercepted calls"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
